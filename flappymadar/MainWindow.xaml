<Window x:Class="FlappyMadar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Madár"
        Width="525"
        Height="490"
        KeyDown="KeyIsDown"
        KeyUp="KeyIsUp">

	<Canvas x:Name="MyCanvas" Background="LightBlue" Focusable="True">

		<Image Source="/image/clouds.png" Width="200" Height="145" Canvas.Left="30" Canvas.Top="120" Tag="cloud"/>
		<Image Source="/image/clouds2.png" Width="200" Height="145" Canvas.Left="300" Canvas.Top="120" Tag="cloud"/>

		<Image Source="/image/pipeBottom.png" Width="66" Height="390" Canvas.Left="104" Canvas.Top="246" Tag="obj1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<Image Source="/image/pipeTop.png" Width="66" Height="390" Canvas.Left="29" Canvas.Top="-317" Tag="obj1" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top"/>

		<Image Source="/image/pipeBottom.png" Width="66" Height="390" Canvas.Left="305" Canvas.Top="341" Tag="obj2"/>
		<Image Source="/image/pipeTop.png" Width="66" Height="390" Canvas.Left="214" Canvas.Top="-226" Tag="obj2"/>

		<Image Source="/image/pipeBottom.png" Width="66" Height="390" Canvas.Left="458" Canvas.Top="257" Tag="obj3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<Image Source="/image/pipeTop.png" Width="66" Height="390" Canvas.Left="380" Canvas.Top="-267" Tag="obj3" HorizontalAlignment="Left" VerticalAlignment="Center"/>

		<Image x:Name="flappyBird" Source="/image/flappyBird.png" Width="50" Height="36" Canvas.Left="1" Canvas.Top="112" HorizontalAlignment="Left" VerticalAlignment="Center"/>

		<Label x:Name="txtScore" Content="Score: 0" FontSize="20" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
	</Canvas>
</Window>
