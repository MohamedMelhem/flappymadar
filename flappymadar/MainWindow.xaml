<Window x:Class="FlappyMadar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Madár"
        Width="525"
        Height="490"
        KeyDown="KeyIsDown"
        KeyUp="KeyIsUp">

	<Canvas x:Name="MyCanvas" Background="LightBlue" Focusable="True">

		<Image Source="/image/clouds.png" Width="200" Height="145" Canvas.Left="30" Canvas.Top="120" Tag="cloud"/>
		<Image Source="/image/clouds2.png" Width="200" Height="145" Canvas.Left="300" Canvas.Top="120" Tag="cloud"/>

		<Image Source="/image/pipeBottom.png" Width="66" Height="390" Canvas.Left="100" Canvas.Top="270" Tag="obj1"/>
		<Image Source="/image/pipeTop.png" Width="66" Height="390" Canvas.Left="100" Canvas.Top="-236" Tag="obj1"/>

		<Image Source="/image/pipeBottom.png" Width="66" Height="390" Canvas.Left="300" Canvas.Top="400" Tag="obj2"/>
		<Image Source="/image/pipeTop.png" Width="66" Height="390" Canvas.Left="300" Canvas.Top="-120" Tag="obj2"/>

		<Image Source="/image/pipeBottom.png" Width="66" Height="390" Canvas.Left="500" Canvas.Top="280" Tag="obj3"/>
		<Image Source="/image/pipeTop.png" Width="66" Height="390" Canvas.Left="500" Canvas.Top="-210" Tag="obj3"/>

		<Image x:Name="flappyBird" Source="/image/flappyBird.png" Width="50" Height="36" Canvas.Left="20" Canvas.Top="190"/>

		<Label x:Name="txtScore" Content="Score: 0" FontSize="20" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
	</Canvas>
</Window>
